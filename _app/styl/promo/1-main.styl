#main
	padding 0 0 100px
	min-height calc(100vh - 603px)
	@media screen and (max-width 991px)
		text-align center
.rhomb
	z-index -1
	&-1
		top -50px
		right 100px
		@media screen and (max-width 991px)
			top auto
			margin 0 auto
			bottom: -70px
			right 0
			left 0
		@media screen and (max-width 560px)
			width 65px
			height: 65px
	&-2
		top 150px
		right 0
		@media screen and (max-width 991px)
			display none
	&-3
		bottom: 100px
		right 300px
		@media screen and (max-width 991px)
			display none
.main
	&-subtitle
		font-family: F
		font-size: 36px
		font-weight: 900
		margin 30px 0
		@media screen and (max-width 1199px)
			font-size: 28px
			margin: 20px 0
		@media screen and (max-width 560px)
			font-size: 22px
	&-text
		font-size: 22px
		line-height: 140%
		margin-bottom: 20px
		span
			display inline-block
			font-size: 28px
			font-weight: bold
			color #68A599
		@media screen and (max-width 1199px)
			font-size: 20px
			span
				font-size: 26px
		@media screen and (max-width 767px)
			margin-bottom: 20px
		@media screen and (max-width 386px)
			margin-bottom 15px
			font-size: 18px
			line-height: 1.3
			span
				font-size: 24px
