.slick-next, .slick-prev
	width 24px
	height 39px
	background-image: url(../img/icons/arrows.png)
	background-repeat: no-repeat
	opacity .8
	transition: all .3s ease
	z-index 999
.slick-prev
	background-position: 0 0
	&:focus
		opacity .8
		background-image: url(../img/icons/arrows.png)
	&:hover
		opacity 1
		background-image: url(../img/icons/arrows.png)
.slick-next
	background-image: url(../img/icons/arrows.png)
	background-position: -24px 0
	&:focus
		opacity .8
		background-image: url(../img/icons/arrows.png)
		background-position: -24px 0
	&:hover
		opacity 1
		background-image: url(../img/icons/arrows.png)
		background-position: -24px 0
